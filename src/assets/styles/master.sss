body,html
  margin: 0
  padding: 0
  background: #222 none
  color: white
  font-size: 10px
  font-family: 'Roboto Mono', monospace

*
  box-sizing: border-box

a
  cursor: pointer

// ============================ Canvases =============================

.render-container
  position: absolute
  top: 0
  height: 100%
  width: 100%
  box-shadow: inset 0 0 100px 0px rgba(0,0,0,0.5)

.render-container canvas
  position: absolute

.render-container.landscape
  width: 8%
  margin: 1%
  top: 2%

#stage .render-container
  width: 100%

#stage .render-container
  margin: 0

#stage .render-container.landscape canvas
  width: 100%
  top: 50%
  transform: translateY(-50%)

#stage .render-container.portrait canvas
  height: 100vh
  left: 50%
  transform: translateX(-50%)
  top: 0
  width: auto

#overlay
  position: fixed
  width: 100%
  background-color: rgba(0,0,0,.5)
  transform: translate3d(0,-100%,0)
  transition: transform .3s .3s
  padding: 2em 0 .4%
  z-index: 10
  min-width: 800px

#overlay:after
  content: ""
  height: 5em
  display: block
  position: absolute
  width: 100%
  top: 100%

#overlay:hover,
#overlay.force-open
  transform: translate3d(0,0,0)

#overlay .render-container
  display: inline-block
  position: relative
  overflow: hidden
  width: 9.6%
  height: 0
  padding-bottom: 9.6%
  margin: 0 .2%

#overlay .render-container:after
  content: ""
  display: block
  position: absolute
  transition: transform .3s, filter 1s
  transform: scaleX(0)
  transform-origin: 50% 0
  width: 100%
  height: 4px
  background-color: white
  bottom: 0

#overlay .render-container canvas
  width: 200%
  transform: translateX(-25%) translateY(-25%)

#overlay .active:after
  transform: scaleX(1)

#overlay .column
  vertical-align: top
  display: inline-block
  padding: 0 1%
  width: 30%

#overlay .column.left
  width: 30%

#overlay .column.middle
  width: 46%

#overlay .column.right
  width: 20%

#overlay h2
  font-size: 1em

#overlay .disabled
  pointer-events: none
  opacity: 0.2


// ========================== Settings ===========================

.settings .label
  margin: 2em 0 .5em 1em

.settings .label:first-child
  margin-top: 1em


// ========================== Algorithm Selector ===========================

.algorithm-selector ul
  margin: 0
  padding: 0

.algorithm-selector li
  display: inline

.algorithm-selector a
  display: inline-block
  width: 28%
  border: 1px solid white
  margin: 2% 5% 2% 0
  text-align: center
  line-height: 4em

.algorithm-selector a.active
  background-color: white
  color: #222

.algorithm-selector .label
  display: inline-block


// ========================== Animation Preview ===========================

.playButton
  display: block
  border: 1px solid white
  font-size: 3em
  width: 1em
  height: 1em
  line-height: 1.5em
  text-align: center
  border-radius: 50%

.playButton:after
  content: "\025B8"
  position: relative
  top: -0.3em

.playButton.playing:after
  font-size: 0.8em
  top: -0.4em


.playButton.playing:after
  content: "\025FC"
